@model Szakdoga.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}



<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{


    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />



    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <div class="form-group">
                    @Html.LabelFor(m => m.Vezeteknev, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Vezeteknev, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Keresztnev, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Keresztnev, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <div class="form-group">

                    @Html.LabelFor(m => m.ProfilePicture, new { @class = "col-md-2 control-label" })
                    <div class="editor-field">
                        <input name="ProfilePicture" id="ProfilePicture" data-val="true" data-val-required="A kép kötelező" type="file" />
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SzulEv, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <input class="form-control" type="date" value="2011-08-19" id="SzulEv" name="SzulEv">
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Varos, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Varos, new { @class = "form-control" })
                    </div>
                </div>

            </div>
        </div>

        <div class="row h-100 justify-content-center align-items-center">
            <div class="col">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input class="btn btn-primary" type="submit" value="Regisztráció">
                    </div>
                </div>
            </div>
        </div>
    </div>




}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
