@model Szakdoga.Models.SportViewModel
@{
    ViewBag.Title = "newSport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row h-100 justify-content-md-center">
    <div class="col-md-12">
        <div class="card bg-light w-25" style="margin:auto;">
            <div class="card-header py-4 text-center"><h3><strong>Új sport felvétele</strong></h3></div>
            <div class="card-body">
                @using (Html.BeginForm("ujSport", "SportAdd", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-group">
                        <div class="col-md-12">
                            <label for="inputState">Sportág</label>
                            <select id="Sport.sportagId" name="Sport.sportagId" class="form-control">
                                @foreach (var s in Model.sportagLista)
                                {
                                    <option value="@s.Id">@s.SportagNev</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Sport.Nev)
                            @Html.TextBoxFor(m => m.Sport.Nev, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Sport.Nev)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row h-100 justify-content-md-center">
                            @Html.HiddenFor(m => m.Sport.Id)
                            @Html.AntiForgeryToken()
                            <input class="btn btn-primary" type="submit" value="Hozzáadás">
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

