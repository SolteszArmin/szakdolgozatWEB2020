@model Szakdoga.Models.SportViewModel
@{
    ViewBag.Title = "newSport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ujSport", "SportAdd", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{


    @Html.AntiForgeryToken()
    <h4>Sport hozzáadása</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Sport.Nev, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Sport.Nev, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Sport.Sportag, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Sport.Sportag, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Hozzáadás" />
        </div>
    </div>
}

