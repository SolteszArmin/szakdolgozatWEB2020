@model IEnumerable<Szakdoga.Models.SportHirdetes>
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutSecound.cshtml";
}
<div id="demo" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="kep" src="~/Content/Sliders/pexels-photo-841130.jpeg" alt="Los Angeles">
            <div class="carousel-caption">
                <h3>Változatos sportok</h3>
                <p>Tandemugrástól kosárlabdáig mindent megtalálsz</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="kep" src="~/Content/Sliders/man-doing-a-dunk-2820906.jpg" alt="Chicago">
            <div class="carousel-caption">
                <h3>Új embereket megismerése</h3>
                <p>Összekötni a kellemeset a hasznossal</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="kep" src="~/Content/Sliders/pexels-photo-1199607.jpeg" alt="New York">
            <div class="carousel-caption" style="color:black;">
                <h3>Ne edzél egyedül</h3>
                <p>Adj fel hirdetést nállunk!</p>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>

</div>


<div class="container-fluid shadow p-3 mb-5 bg-white rounded"  style="margin-top:20px; width:95%">
    <div class="row">
        <div class="col-md-6 text-md-center" style="margin:auto;">
            <h3>Kiemelt Hirdetéseink</h3>
        </div>
        <div class="col-md-6 text-md-center" style="margin:auto;">

        </div>
    </div>
    <div class="row">
        <div class="col-md-6"  style="max-height:400px; max-width:1000px; overflow:auto;"> 
                @if (!Model.Any())
                {
                    <div class="text-center"><h1>Még nincs hirdetés kirakva <i class="fas fa-sad-tear"></i></h1></div>

                }
                else
                {
                    <div class="row">

                        @foreach (var i in Model)
                        {
                            string teljesNev = i.User.Vezeteknev + " " + i.User.Keresztnev;
                            <div class="blog-card bal" style="left:0; margin-left:10px;">
                                <div class="meta">
                                    <div class="photo" style="background-image: url(@Url.Action("Photo", "Manage", new { UserId = i.User.Id }))"></div>
                                    <ul class="details">
                                        <li class="author">
                                            @Html.ActionLink(teljesNev, "Felhasznalo", "Account", new { id = i.User.Id }, new { @class = "" })
                                        </li>
                                        <li class="date">@DateTime.Parse(i.User.BirthDate.ToString()).ToShortDateString()</li>
                                        <li class="tags">
                                            @i.User.Varos
                                        </li>
                                    </ul>
                                </div>
                                <div class="description">
                                    <h1>@i.Nev</h1>
                                    <h2>@i.Sport.Nev</h2>
                                    <p> @i.Leiras</p>
                                    <p>Keresett Létszám: @i.SportoloLetszam</p>
                                </div>
                            </div>
                        }
                    </div>
                } 
        </div>
        <div class="col-md-6">
            loremipsum loremipsum loremipsum loremipsum loremipsum loremipsum loremipsum loremipsum loremipsum loremipsum
            loremipsum loremipsum loremipsum loremipsum loremipsum loremipsum loremipsum loremipsum loremipsum loremipsum
            loremipsum loremipsum loremipsum loremipsumloremipsum loremipsum
        </div>
    </div>
</div>
<hr />
<footer>
    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
</footer>
