@model Szakdoga.Models.HirdetesAddViewModel
@{
    ViewBag.Title = "UjHirdetes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row h-100 justify-content-md-center">
    <div class="col-md-12">
        <div class="card bg-light w-50" style="margin:auto;">
            <div class="card-header py-4 text-center"><h3><strong>Hirdetés Feladása</strong></h3></div>
            <div class="card-body">
                @using (Html.BeginForm("HirdetesAdd", "Hirdetes", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-row">
                        <div class="col-6">
                            @Html.LabelFor(m => m.sportHirdetes.Nev, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.sportHirdetes.Nev, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.sportHirdetes.Nev)
                        </div>
                        <div class="col-6">
                            <label for="sportHirdetes.sportId">Sport</label>
                            <select id="sportHirdetes.sportId" name="sportHirdetes.sportId" class="form-control">
                                @foreach (var s in Model.Sport)
                                {
                                    <option value="@s.Id">@s.Nev</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-6">
                            <label for="inputState">Kereset Korosztály</label>
                            <select id="sportHirdetes.Korosztaly" name="sportHirdetes.Korosztaly" class="form-control">
                                @foreach (var s in Model.KrosztalyLista)
                                {
                                    <option value="@s">@s</option>
                                }
                            </select>
                        </div>
                        <div class="col-6">
                            <label for="inputState">Létszám</label>
                            <select id="sportHirdetes.SportoloLetszam" name="sportHirdetes.SportoloLetszam" class="form-control">
                                @for (int i = 1; i <= 6; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.sportHirdetes.Leiras, new { @class = "control-label" })
                        @Html.TextAreaFor(m => m.sportHirdetes.Leiras, new { @class = "form-control",@style="max-width:1500px; min-width:100px; width:100%"})
                    </div>
                    <div class="form-group">

                        <div class="row h-100 justify-content-md-center">
                            <input class="btn btn-primary" type="submit" value="Hirdetés feladása">
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>